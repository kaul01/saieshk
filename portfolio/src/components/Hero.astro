---
import type { HeroProps } from "@types";
import { SITE_CONFIG } from "@config";

type Props = HeroProps;

const { name, specialty, summary, email } = Astro.props;
const { socialLinks } = SITE_CONFIG;

// 1. Define the icons (Added the official Gmail 'M' path)
const icons: Record<string, string> = {
  LinkedIn:
    "M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z M2 9h4v12H2z M4 4a2 2 0 1 1-2 2 2 2 0 0 1 2-2z",
  Github:
    "M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4 M9 18c-4.51 2-5-2-7-2",
  Mail: 
    "M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z", // Official Gmail Path
};

// 2. Define Brand Colors
const brandColors: Record<string, string> = {
  LinkedIn: "text-[#0A66C2] border-[#0A66C2] hover:bg-[#0A66C2]/10", 
  Github: "text-white border-white hover:bg-white/10",               
  Mail: "text-[#EA4335] border-[#EA4335] hover:bg-[#EA4335]/10",     // Gmail Red
};
---

<section class="py-24 md:py-32" id="#hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="flex flex-col items-start gap-6">
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-[#fff] transition-colors hover:bg-blue-700"
      href={`mailto:${email}`}
    >
      Get in Touch
    </a>

    <div class="flex items-center gap-4">
      {socialLinks.map((link) => (
        <a
          href={link.href}
          target="_blank"
          rel="noopener noreferrer"
          class={`group flex items-center justify-center rounded-full border bg-transparent p-3 transition-all ${brandColors[link.text] || "text-neutral border-neutral hover:text-white"}`}
          aria-label={link.text}
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor" 
            class="transition-transform group-hover:scale-110"
          >
             <path d={icons[link.text] || icons.Mail} />
          </svg>
        </a>
      ))}
      
      <a
          href={`mailto:${email}`}
          class={`group flex items-center justify-center rounded-full border bg-transparent p-3 transition-all ${brandColors.Mail}`}
          aria-label="Gmail"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="transition-transform group-hover:scale-110">
            <path d={icons.Mail} />
          </svg>
        </a>
    </div>
  </div>
</section>